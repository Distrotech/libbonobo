module Bonobo {

module Desktop {

interface Window : Bonobo::Unknown {

	struct Geometry {
		short x, y;
		short width, height;
	};

	attribute string title;

	Geometry get_geometry ();
	void set_geometry (in Geometry geo);

	unsigned long get_window_id ();
};

};

